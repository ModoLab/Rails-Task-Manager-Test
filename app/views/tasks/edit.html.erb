
<%= link_to 'Retour', request.referer || root_path, class: 'btn btn-secondary' %>



<div class="container">

  <div class="row">

    <div class="text-center mt-5 mb-3">
      <h1>Modifier tâche</h1>
    </div>

    <img src="https://plus.unsplash.com/premium_photo-1667587245819-2bea7a93e7a1?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="" class="" id="heading">

    <div class="my-5 justify-content-center d-flex flex-column align-items-center">

      <div class="border p-5 shadow-lg col-8 text-center d-flex flex-column justify-content-center align-items-center">

      <h1 class="text-center mb-3">Modifier la tâche <%= @task.title %></h1>

      <%= form_with model: @task, local: true do |form| %>
        <div class="d-flex flex-row col-12  justify-content-center text-center align-items-center">
          <%= form.label :title, "Nouvel intitulé", class: "me-4 text-nowrap" %>
          <%= form.text_field :title, class: "form-control" %>
        </div>

       <div class="form-check form-switch d-flex flex-row mt-4 align-items-center mb-4">
          <%= form.label :completed, "Terminée ?", class: "form-check-label me-5", for: "flexSwitchCheckDefault" %>
          <%= form.check_box :completed, class: "form-check-input ms-2", id: "flexSwitchCheckDefault" %>
        </div>

        <div>
          <%= form.submit "Mettre à jour" %>
        </div>
      <% end %>
</div>

</div>
</div>
</div>
