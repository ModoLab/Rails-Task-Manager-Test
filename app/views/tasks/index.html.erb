<div class="container">
  <div class="row">
    <div class="text-center mt-5 mb-3">
      <h1 class="">Liste des tâches</h1>
    </div>
    <img src="https://plus.unsplash.com/premium_photo-1667587245819-2bea7a93e7a1?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="" class="" id="heading">
    <div class="my-5 justify-content-center d-flex flex-column align-items-center">
      <div class="d-flex flex-column text-center col-8 rounded-5 p-4 shadow-lg">
        <table class="">
          <thead class="">
            <tr class="">
              <th class="px-5 pb-3 fs-5">Titre</th>
              <th class="px-5 pb-3 fs-5">Statut</th>
              <th class="px-5 pb-3 fs-5">Actions</th>
            </tr>
          </thead>
          <tbody class="table-spacing pb-5">
            <% @tasks.each do |task| %>

              <tr class="border">
                <td class="py-3 text-start ps-4">

                  <div class="d-flex flex-row align-items-center">
                    <img src="https://images.unsplash.com/photo-1496167117681-944f702be1f4?q=80&w=2832&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="" class="minia me-4 shadow-sm">
                    <%= task.title %>
                  </div>


                </td>
                <td class="text-center py-3">
                  <%= (task.completed ? "<i class='fa-solid fa-check'></i>" : "<i class='fa-regular fa-circle'></i>").html_safe %>
                </td>
                <td class="py-4 d-flex flex-row justify-content-around text-center align-items-center">
                  <%= link_to 'Modifier', edit_task_path(task), class: 'border px-3 py-2 rounded-3 text-decoration-none' %>
                  <%= button_to 'Supprimer', task_path(task), method: :delete, data: { confirm: 'Êtes-vous sûr ?' }, class: 'border p-2 rounded-3 text-decoration-none text-warning' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="my-4">
          <%= link_to 'Ajouter une tâche', new_task_path, class: 'btn btn-primary rounded-3' %>
        </div>
      </div>
    </div>
  </div>
</div>
