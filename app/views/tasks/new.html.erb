<h1>Nouvelle tâche</h1>
<%= form_with model: @task, local: true do |form| %>
  <div>
    <%= form.label :title, "Titre" %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :completed, "Terminée ?" %>
    <%= form.check_box :completed %>
  </div>
  <div>
    <%= form.submit "Créer" %>
  </div>
<% end %>
